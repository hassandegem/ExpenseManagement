@model ExpenseEntity 

@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border p-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Record your Expense</h2>
        </div>
        <br />

        <div class="row">
            <div class="col-4">
                <label asp-for="ExpenseDate"></label>
                <input asp-for="ExpenseDate" class="form-control datetimepicker" />
                <span class="text-danger" asp-validation-for="ExpenseDate"></span>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-4">
                <label asp-for="ExpenseCategoryId"></label>
                <select asp-for="ExpenseCategoryId" class="form-control"  asp-items="@ViewBag.PopulateExpCategory" >
               <option selected> -- Select Expense Category</option>
                </select>
                <span class="text-danger" asp-validation-for="ExpenseCategoryId"></span>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-4">
                <label asp-for="ExpenseGivenTo"></label>
                <input asp-for="ExpenseGivenTo" class="form-control" placeholder="Enter Paid to" />
                <span class="text-danger" asp-validation-for="ExpenseGivenTo"></span>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-4">
                <label asp-for="ExpenseAmount"></label>
                <input asp-for="ExpenseAmount" class="form-control  " />
                <span class="text-danger" asp-validation-for="ExpenseAmount"></span>
            </div>
        </div>
        <br />


        <div class="w-12 btn-group" role="group">
            <input type="submit" value="Save" class="btn btn-primary mx-1" />
            <a asp-controller="Expense" asp-action="Index" class="btn btn-info">Back</a>
        </div>
    </div>

</form>
