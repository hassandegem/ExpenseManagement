 @model IEnumerable<ExpenseEntity>
@{
    ViewData["Title"] = "List of all expenses";
}

<div>
    <div class="row pt-4">
        <div class="col-9">
            <h2 class="text-success"> View All your Expenses</h2>
        </div>
        <div class="col-3 ">
            <a asp-controller="Expense" asp-action="create" class="btn btn-primary float-right">Add New Expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-hover table-striped" width="100%">
            <thead>
                <tr>
                    <th width="20%">Expense Date</th>
                    <th width="20%">Expense Category</th>
                    <th width="20%">Given To</th>
                    <th width="20%">Amount</th>
                    <th width="30%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ExpenseDate.ToShortDateString()</td>
                        <td>@item.ExpenseCategory.ExpenseCategoryName</td>
                        <td>@item.ExpenseGivenTo</td>
                        <td>@item.ExpenseAmount</td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Expense" asp-action="GetExpenceForUpdate" asp-route-id="@item.ExpenseId" class="btn btn-primary mx-1">Edit</a>
                                <a asp-controller="Expense" asp-action="GetExpenceForDelete" asp-route-id="@item.ExpenseId" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>

                }

            </tbody>
        </table>


    }
    else
    {
        <p class="text-center"> No Record Found</p>
    }



</div>
  

