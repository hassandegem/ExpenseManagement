@model ExpenseEntity

@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <input asp-for="ExpenseId" hidden />

    <div class="border p-1">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete your Expense</h2>
        </div>
        <br />

        <div class="row">
            <div class="col-4">
                <label asp-for="ExpenseDate"></label>
                <input asp-for="ExpenseDate" class="form-control datetimepicker" disabled />
                <span class="text-danger" asp-validation-for="ExpenseDate"></span>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-4">
                <label asp-for="ExpenseCategoryId"></label>
                <select asp-for="ExpenseCategoryId" class="form-control" asp-items="@ViewBag.PopulateExpCategory" disabled>
                    <option selected> -- Select Expense Category</option>
                </select>
                <span class="text-danger" asp-validation-for="ExpenseCategoryId"></span>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-4">
                <label asp-for="ExpenseGivenTo"></label>
                <input asp-for="ExpenseGivenTo" class="form-control  " disabled />
                <span class="text-danger" asp-validation-for="ExpenseGivenTo"></span>
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-4">
                <label asp-for="ExpenseAmount"></label>
                <input asp-for="ExpenseAmount" class="form-control  " disabled />
                <span class="text-danger" asp-validation-for="ExpenseAmount"></span>
            </div>
        </div>
        <br />


        <div class="w-12 btn-group" role="group">
            <input type="submit" value="Delete" class="btn btn-primary mx-1" />
            <a asp-controller="Expense" asp-action="Index" class="btn btn-info">Back</a>
        </div>
    </div>

</form>
