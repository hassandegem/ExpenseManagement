@model IEnumerable<ExpenseCategoryEntity>
@{
    ViewData["Title"] = "List of all Categories";
}

<div>
    <div class="row pt-4">
        <div class="col-9">
            <h2 class="text-success"> View All your Categories</h2>
        </div>
        <div class="col-3">
            <a asp-controller="ExpenseCategory" asp-action="Create" class="btn btn-primary  float-right">Add New Expense Category</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-hover table-striped" width="100%">
            <thead>
                <tr>
                    <th width="80%">Expense Category</th>
                    <th width="20%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ExpenseCategoryName</td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="ExpenseCategory" asp-action="GetExpenceForUpdate" asp-route-id="@item.ExpenseCategoryId" class="btn btn-primary mx-1">Edit</a>
                                <a asp-controller="ExpenseCategory" asp-action="GetExpenceForDelete" asp-route-id="@item.ExpenseCategoryId" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    }
    else
    {
        <p class="text-center"> No Record Found</p>
    }



</div>


